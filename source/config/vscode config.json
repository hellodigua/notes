{
  // 一个 tab 等于 2 个空格
  "editor.tabSize": 2,
  // 按 tab 等于插入空格
  "editor.insertSpaces": true,
  // 编辑器字号
  "editor.fontSize": 14,
  // 自动换行
  "editor.wordWrap": "on",
  // 保存的时候自动格式化
  "editor.formatOnSave": true,
  // 显示隐藏字符
  "editor.renderWhitespace": "boundary",
  // 打开文件时，基于文件内容检测 "editor.tabSize" 和 "editor.insertSpaces"
  "editor.detectIndentation": true,
  // 控制键入时是否应显示快速建议
  "editor.quickSuggestions": true,
  // 控制延迟多少毫秒后将显示快速建议
  "editor.quickSuggestionsDelay": 10,
  // 用色块代替字符
  "editor.minimap.renderCharacters": false,
  // 水平最大列数
  "editor.minimap.maxColumn": 200,
  // 始终展示滑块
  "editor.minimap.showSlider": "always",
  // 默认文件编码
  "files.encoding": "utf8",
  // 换行符为 LF
  "files.eol": "\n",
  // 自动删除多余的空格
  "files.trimTrailingWhitespace": true,
  // 尾部插入新行
  "files.insertFinalNewline": true,
  // 配置语言的文件关联，这些关联的优先级高于已安装语言的默认关联。
  "files.associations": {
    "*.html": "html",
    "*.js": "javascript",
    "*.wxs": "javascript",
    "*.vue": "vue",
    "*.wxml": "html",
    "*.wxss": "css"
  },
  // Markdown 预览中供使用的 CSS 样式表的 URL 或本地路径列表。
  "markdown.styles": [],
  // 格式和缩进 {{#foo}} 和 {{/foo}}.
  "html.format.indentHandlebars": true,
  // html格式化
  // "html.format.wrapAttributes": "force-aligned",
  // 每行最大字符数(0 = 禁用)
  // "html.format.wrapLineLength": 0,
  // 启用 JavaScript 验证
  "javascript.validate.enable": false,
  // 文件移动后是否更新import路径
  "javascript.updateImportsOnFileMove.enabled": "never",
  "window.restoreFullscreen": true,
  "window.zoomLevel": 0,
  "workbench.startupEditor": "welcomePage",
  "workbench.colorCustomizations": {
    "editorCursor.foreground": "#f4f4f4"
  },
  // "workbench.colorTheme": "Dark+ (default dark)",
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  // 按 TAB 键时，将展开 Emmet 缩写
  "emmet.triggerExpansionOnTab": true,
  // eslint配置
  "eslint.autoFixOnSave": true,
  "eslint.alwaysShowStatus": true,
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    {
      "language": "vue",
      "autoFix": true
    },
    {
      "language": "typescript",
      "autoFix": true
    }
  ],
  "[scss]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[css]": {
    "editor.defaultFormatter": "HookyQR.beautify"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  // vue格式化
  "vetur.format.defaultFormatterOptions": {
    "js-beautify-html": {
      "indent_handlebars": false,
      "wrap_attributes": "force-aligned"
    }
  },
  "vetur.format.defaultFormatter.js": "vscode-typescript",
  "vetur.format.defaultFormatter.html": "js-beautify-html",
  "vetur.validation.template": false,
  // gitlens插件
  "git.enableSmartCommit": true,
  "gitlens.advanced.messages": {
    "suppressCommitHasNoPreviousCommitWarning": false,
    "suppressCommitNotFoundWarning": false,
    "suppressFileNotUnderSourceControlWarning": true,
    "suppressGitVersionWarning": false,
    "suppressLineUncommittedWarning": false,
    "suppressNoRepositoryWarning": false,
    "suppressResultsExplorerNotice": true,
    "suppressShowKeyBindingsNotice": true,
    "suppressUpdateNotice": true,
    "suppressWelcomeNotice": false
  },
  "gitlens.keymap": "alternate",
  "gitlens.views.fileHistory.enabled": true,
  "gitlens.views.lineHistory.enabled": true,
  "extensions.ignoreRecommendations": false,
  // 拼写检查忽略单词
  "cSpell.userWords": [
    "Customkey",
    "Customdata",
    "Weibo",
    "Funs",
    "Promisify",
    "codecov",
    "commitlint",
    "debounced",
    "dxdesign",
    "gitlab",
    "openapi",
    "qrcode",
    "readonly",
    "weapp"
  ],
  // 背景插件
  "background.enabled": false,
  "background.useDefault": false,
  // 同步插件
  "sync.gist": "74a82091f112cdbf3aa9ab47c71e8823",
  "sync.autoDownload": true,
  "sync.autoUpload": true,
  "sync.forceUpload": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },
  "diffEditor.ignoreTrimWhitespace": false,
}
